@model List<Movie>
@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    .cart-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .movie-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .movie-card {
        width: 220px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 15px;
    }

        .movie-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 5px;
        }

    .movie-title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
        color: #333;
    }

    .movie-info {
        font-size: 14px;
        color: #666;
    }
</style>

<div class="cart-container">
    <h2 class="text-center">Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Your cart is empty!
        </div>
    }
    else
    {
        <div class="movie-list">
            @foreach (var movie in Model)
            {
                <div class="movie-card">
                    <img src="~/images/@movie.ImageUrl" class="card-img-top" alt="@movie.Title">
                    <div class="movie-title">@movie.Title</div>
                    <div class="movie-info">@movie.ReleaseYear - @movie.Director</div>

                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="id" value="@movie.MovieID" />
                        <button type="submit" class="btn btn-danger btn-sm mt-2">Remove</button>
                    </form>
                </div>
            }
        </div>
    }

    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return To Home</a>
    </div>
</div>
