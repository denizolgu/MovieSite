@{
    ViewData["Title"] = "Home Page";
    var movies = ViewBag.Movies as List<Movie>;
}

<style>
    .page-title {
        font-size: 24px;
        font-weight: bold;
        margin: 20px 0;
        padding-left: 20px;
        color: #333;
    }

    .movie-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .movie-card {
        width: 220px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
        padding: 15px;
    }

        .movie-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 5px;
        }

    .movie-title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
        color: #333;
    }

    .movie-info {
        font-size: 14px;
        color: #666;
    }

    .rating {
        color: #f39c12;
        font-weight: bold;
        margin-top: 5px;
    }
</style>

<div class="container">
    <!-- Sol üst köşeye Movies başlığı eklendi -->
    <div class="page-title">Movies</div>

    <div class="movie-grid">
        @foreach (var movie in movies)
        {
            <div class="movie-card">
                <img src="~/images/@movie.ImageUrl" alt="@movie.Title">
                <div class="movie-title">@movie.Title</div>
                <div class="movie-info">@movie.ReleaseYear</div>
                <div class="rating">⭐ @((new Random().Next(6, 10) / 2.0)) / 5</div>
                <a asp-controller="Movie" asp-action="Info" asp-route-id="@movie.MovieID" class="btn btn-primary btn-sm mt-2">View Details</a>
            </div>
        }
    </div>
</div>
